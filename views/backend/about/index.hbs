<main id="main" class="main">

  <div class="pagetitle">
    <h1>Blogs</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item active">{{title}}</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

    <div class="d-flex justify-content-center">
            <a href="/admin/blog/create" class="btn btn-primary"><i class="bi bi-plus-circle "></i> Post A Blog</a>
    </div>
  <section>
    <div class="container container-fluid shadow">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Tittle</th>
            <th>Details</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each blog}}
          <tr>
            <td>#</td>
            <td>{{title}}</td>
            <td>{{details}}</td>
            <td> <img src="/{{image}}" alt="" height="50px" width="50px"> </td>
            <td>
              <a href="/admin/blog/{{id}}/edit" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></a>
              <a href="/admin/blog/{{id}}/view" class="btn btn-outline-success btn-sm"><i class="bi bi-eye-fill"></i></a>
              <a href="/admin/blog/{{id}}/delete" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash3-fill"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
  <!-- End Tables without borders -->

</main><!-- End #main -->