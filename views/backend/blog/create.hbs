<body>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>New Blog</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item"><a href="/admin/blog">Blog</a></li>
          <li class="breadcrumb-item active">{{title}}</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">

        <div class="card shadow">
          <div class="card-body">
            <h5 class="card-title">Post a new Blog</h5>

            <!-- General Form Elements -->
            <form method="post" action="/admin/blog/store" enctype="multipart/form-data">
              <div class="row mb-3">
                <label for="title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                  <input type="text" name="title" placeholder="Blog Title" class="form-control">
                <b class="text-danger">
                      {{errors.title.msg}}
                </b>
                </div>
              </div>
              <div class="row mb-3">
                <label for="slug" class="col-sm-2 col-form-label">Slug</label>
                <div class="col-sm-10">
                  <input type="text" name="slug" placeholder="Slug" class="form-control">
                <b class="text-danger">
                    {{errors.slug.msg}}
                </b>
                </div>
              </div>
              <div class="row mb-3">
                <label for="date" class="col-sm-2 col-form-label">Date</label>
                <div class="col-sm-4">
                  <input type="date" name="date" placeholder="date" class="form-control">
                <b class="text-danger">
                  {{errors.date.msg}}
                </b>
                </div>
                <label for="catagory" class="col-sm-2 col-form-label">Catagory</label>
                <div class="col-sm-4">
                  <input type="text" name="catagory" placeholder="catagory" class="form-control">
                <b class="text-danger">
                  {{errors.catagory.msg}}
                </b>
                </div>               
              </div>

              <div class="row mb-3">
                <label for="details" class="col-sm-2 col-form-label">Details</label>
                <div class="col-sm-10">
                  <textarea type="text" class="form-control" name="details" placeholder="Write about your blog"
                    style="height: 100px"></textarea>   
                <b class="text-danger">
                  {{errors.details.msg}}
                </b>
                </div>
              </div>

              <div class="row mb-3">
                <label for="image" class="col-sm-2 col-form-label">Image</label>
                <div class="col-sm-10">
                  <input class="form-control" type="file" name="image">
                <b class="text-danger">
                  {{errors.image.msg}}
                </b>
                </div>
              </div>

              <div class="row mb-3">
                <div class="d-flex justify-content-center">

                  <button type="submit" class="btn btn-outline-success m-2 shadow">Post</button>
                  <button type="reset" class="btn btn-outline-danger m-2 shadow">Reset</button>
                </div>
              </div>

            </form><!-- End General Form Elements -->

          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

</body>