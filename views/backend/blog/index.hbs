<main id="main" class="main">

  <div class="pagetitle">
    <h1>Blogs</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item">Blog</li>
        <li class="breadcrumb-item active">{{title}}</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section>
    <div class="container container-fluid shadow">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Tittle</th>
            <th>Details</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr>
            <td>1</td>
            <td>{{title}}</td>
            <td>{{details}}</td>
            <td>hello</td>
            <td>
              <a href="/admin/blog/1/edit" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
              <a href="/admin/blog/1/view" class="btn btn-outline-success btn-sm"><i class="bi bi-eye-fill"></i></a>
              <a href="/admin/blog/1/delete" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash3-fill"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
  <!-- End Tables without borders -->

</main><!-- End #main -->