<body>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>New Contact</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item"><a href="/admin/contact">Contacts</a></li>
          <li class="breadcrumb-item active">{{title}}</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">

        <div class="card shadow">
          <div class="card-body">
            <h5 class="card-title">Post a new Blog</h5>

            <!-- General Form Elements -->
            <form method="post" action="/admin/contact//update" enctype="multipart/form-data">
              <div class="row mb-3">
                <label for="title" class="col-sm-2 col-form-label">Icon</label>
                <div class="col-sm-10">
                  <input type="text" name="icon" placeholder="bi bi-geo-alt-fill" class="form-control">
                <b class="text-danger">
                      {{errors.icon.msg}}
                </b>
                </div>
              </div>
              <div class="row mb-3">
                <label for="slug" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                  <input type="text" name="title" placeholder="Title" class="form-control">
                <b class="text-danger">
                    {{errors.title.msg}}
                </b>
                </div>
              </div>

              <div class="row mb-3">
                <label for="details" class="col-sm-2 col-form-label">Details</label>
                <div class="col-sm-10">
                  <textarea type="text" class="form-control" name="details" placeholder="your contact deatils"
                    style="height: 100px"></textarea>   
                <b class="text-danger">
                  {{errors.details.msg}}
                </b>
                </div>
              </div>

              <div class="row mb-3">
                <div class="d-flex justify-content-center">

                  <button type="submit" class="btn btn-outline-success m-2 shadow">Add</button>
                  <button type="reset" class="btn btn-outline-danger m-2 shadow">Reset</button>
                </div>
              </div>

            </form><!-- End General Form Elements -->

          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

</body>